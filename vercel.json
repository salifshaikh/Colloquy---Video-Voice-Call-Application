{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { 
          "distDir": "client/dist",
          "installCommand": "npm install",
          "buildCommand": "npm run build"
        }
      }
    ],
    "routes": [
      { "src": "/assets/(.*)", "dest": "/assets/$1" },
      { "src": "/css/(.*)", "dest": "/css/$1" },
      { "src": "/js/(.*)", "dest": "/js/$1" },
      { "src": "/(.*)", "dest": "/index.html" }
    ]
  }